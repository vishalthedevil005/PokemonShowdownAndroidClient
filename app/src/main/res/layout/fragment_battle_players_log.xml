<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/battle_general"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/battle_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/background"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_meadow" />

        <ImageView
            android:id="@+id/weather_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:contentDescription="@string/weather" />

        <FrameLayout
            android:id="@+id/battle_interface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/battle_background"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/battle_interface"
            android:layout_margin="8dp"
            android:alpha="0.7"
            android:background="@drawable/editable_frame_blackwhite"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/battle_interface"
            android:layout_below="@id/turn"
            android:layout_marginStart="12dp"
            android:alpha="0.7"
            android:background="@drawable/editable_frame_blackwhite"
            android:padding="4dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/action_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:lines="1"
            android:text="How will you start the battle?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <FrameLayout
                    android:id="@+id/action_interface"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:text="@string/back"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:padding="4dp"
                    android:text="@string/skip_animation"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_round_corner"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:lines="1"
                            android:padding="2dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/avatar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:contentDescription="@string/avatar"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/avatar_001" />

                        <LinearLayout
                            android:id="@+id/side"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:id="@+id/icon5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                                <ImageView
                                    android:id="@+id/icon3"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                                <ImageView
                                    android:id="@+id/icon1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:id="@+id/icon6"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                                <ImageView
                                    android:id="@+id/icon4"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                                <ImageView
                                    android:id="@+id/icon2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/battlelog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/button_battle_action"
                            android:clickable="true"
                            android:drawableLeft="@drawable/ic_class_black_18dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/log" />

                        <TextView
                            android:id="@+id/timer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/button_battle_action"
                            android:clickable="true"
                            android:drawableLeft="@drawable/ic_alarm_black_18dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/timer" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:src="@drawable/ic_add_battle_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_round_corner"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/username_o"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:lines="1"
                            android:padding="2dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/avatar_o"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:contentDescription="@string/avatar"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/avatar_001" />

                        <LinearLayout
                            android:id="@+id/side_o"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:id="@+id/icon5_o"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                                <ImageView
                                    android:id="@+id/icon3_o"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                                <ImageView
                                    android:id="@+id/icon1_o"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:id="@+id/icon6_o"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                                <ImageView
                                    android:id="@+id/icon4_o"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                                <ImageView
                                    android:id="@+id/icon2_o"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/pokemon_icon"
                                    android:src="@drawable/pokeball_none" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>